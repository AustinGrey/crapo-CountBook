<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <!-- Adapted from https://stackoverflow.com/questions/6162315/set-width-of-textview-in-terms-of-characters
             Sept 27 2017-->
    <TextView
        android:id="@+id/liCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="2"
        android:minEms="2"
        android:layout_gravity="center_vertical"
        android:text="countddd"
        android:textSize="30sp"
        android:textStyle="bold" />
    <Space
        android:layout_width="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/liName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxEms="4"
        android:minEms="4"
        android:text="xxxxxxxxxddd" />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <Button
        android:id="@+id/liAdd"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="+"/>
    <Button
        android:id="@+id/liSub"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="-"/>
    <TextView
        android:id="@+id/liDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="dd MMM yy \nHH:mm:ss" />

    <Button
        android:id="@+id/liEdit"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Edit"/>
</LinearLayout>
